{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "strict": true,
    "strictNullChecks": true,
    "noImplicitThis": true,
    "allowSyntheticDefaultImports": true,
    "preserveConstEnums": true,
    "lib": [
      "es2017",
      "es6",
      "es5",
      "dom"
    ],
    "sourceMap": true,
    "inlineSources": true,
    "declaration": true,
    "outDir": "./build/tsc/dist",
    "baseUrl": "./"
  },
  "include": [
    "src/jsMain/typescript/**/*.ts"
  ]
}